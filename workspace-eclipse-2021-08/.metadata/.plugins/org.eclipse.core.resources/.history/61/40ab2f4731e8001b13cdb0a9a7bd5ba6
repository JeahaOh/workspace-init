package kr.co.hanshinit.NeoCMS.cop.sns.service;

import java.util.List;
import kr.co.hanshinit.NeoCMS.cop.sns.fbApiKey.service.FbApiKey;

public interface SnsService {
	
	
	/**
	 * SNS 내용 목록 조회
	 * @param snsRs
	 * @return List<Sns>  목록
	 * @throws Exception
	 */
	List<SnsVO> selectSnsList(String type) throws Exception;
	
	/** 
	 * SNS 내용 통합 조회
	 * @param snsRs
	 * @return List<Sns>  목록
	 * @throws Exception
	 */
	List<SnsVO> selectSnsTotList() throws Exception;	
	
	/**
	 * SNS 내용 메인 표시
	 * @param snsRs
	 * @return List<Sns>  목록
	 * @throws Exception
	 */
	List<SnsVO> mainSnsList(String type, int listSize) throws Exception;
	
	/**
	 * Twitter 타임라인 
	 * @param snsRs
	 * @return List<Sns>  목록
	 * @throws Exception
	 */
    void updateTwitterData(SnsVO snsVO) throws Exception;
    
    /**
	 * FaceBook 타임라인
	 * @param snsRs
	 * @return List<Sns>  목록
	 * @throws Exception
	 */
    void updateFaceBookData(SnsVO snsVO) throws Exception;
    int updateFaceBookData(SnsVO snsVO, FbApiKey apiKey) throws Exception;
    
    /**
	 * FaceBook 타임라인
	 * @param snsRs
	 * @return List<Sns>  목록
	 * @throws Exception
	 */
    void updateBlogData(SnsVO snsVO) throws Exception;
    
    /**
	 * FaceBook 타임라인
	 * @param snsRs
	 * @return List<Sns>  목록
	 * @throws Exception
	 */
    void updateYoutubeData(SnsVO snsVO) throws Exception;
    
    
    

}
