package kr.co.hanshinit.NeoCMS.cop.sns.fbApiKey.service.impl;

import java.util.List;
import org.apache.commons.lang.builder.ToStringBuilder;
import org.apache.commons.lang.builder.ToStringStyle;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.stereotype.Repository;
import egovframework.rte.psl.dataaccess.EgovAbstractDAO;
import kr.co.hanshinit.NeoCMS.cop.sns.fbApiKey.service.FbApiKey;

@Repository("fbApiKeyDAO")
public class FbApiKeyDAO extends EgovAbstractDAO {
  
  Logger logger = LoggerFactory.getLogger(this.getClass());
  
  
  public static final String PREFIX = "fbApiKeyDAO.";
  
  // API KEY 갯수 조회
  //public int getApiKeyCnt() {return (int) select( PREFIX + "getApiKeyCnt" );}
  
  // API KEY 목록 조회
  @SuppressWarnings("unchecked")
  public List<FbApiKey> getApiKeyList() {
    return (List<FbApiKey>) list( PREFIX + "getApiKeyList" );
  }

  
  // API KEY 추가 혹은 수정
  public int upsertApiKey( FbApiKey key ) {
    logger.debug("\n\tnewKey : {}", ToStringBuilder.reflectionToString( key, ToStringStyle.MULTI_LINE_STYLE));
    return update( PREFIX + "upsertApiKey", key);
  }

  // API KEY 조회
  public FbApiKey getApiKey( FbApiKey key ) {
    return (FbApiKey) select( PREFIX + "getApiKey", key );
  }


  // API TEMP TOKEN 또는 LONG TERM TOKEN 수정
  public int upsertApiToken( FbApiKey key ) {
    logger.debug("\n\tnewKey : {}", ToStringBuilder.reflectionToString( key, ToStringStyle.MULTI_LINE_STYLE));
    return update( PREFIX + "upsertApiToken", key );
  }
  
  // API KEY 삭제
  public int deleteApiKey( FbApiKey key ) {
    return delete( PREFIX + "deleteApiKey", key );
  }
  
}
