package kr.co.hanshinit.NeoCMS.cop.sns.web;

import java.util.List;
import javax.annotation.Resource;
import javax.servlet.http.HttpServletRequest;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import kr.co.hanshinit.NeoCMS.cmm.service.CmmUseService;
import kr.co.hanshinit.NeoCMS.cmm.stereotype.Interceptor;
import kr.co.hanshinit.NeoCMS.cmm.util.StringUtil;
import kr.co.hanshinit.NeoCMS.cop.sns.service.SnsService;
import kr.co.hanshinit.NeoCMS.cop.sns.service.SnsVO;


@Controller
public class SnsWebController {

  Logger logger = LoggerFactory.getLogger(this.getClass());

	@Resource(name="cmmUseService")
	private CmmUseService cmmUseService;

	/** snsService */
	@Resource(name="snsService")
	private SnsService snsService;

	@Interceptor("templateBinding")
	@RequestMapping(value="/{siteId}/selectSnsList.do")
    public String selectSnsList(@ModelAttribute("snsVO") SnsVO snsVO, @PathVariable("siteId") String siteId, ModelMap model) throws Exception {

		List<SnsVO> faceBookList = snsService.selectSnsList("F");
		model.addAttribute("faceBookList", faceBookList);

		List<SnsVO> blogList = snsService.selectSnsList("B");
		model.addAttribute("blogList", blogList);

		List<SnsVO> twitterList = snsService.selectSnsList("T");
		model.addAttribute("twitterList", twitterList);

		List<SnsVO> youtubeList = snsService.selectSnsList("Y");
		model.addAttribute("youtubeList", youtubeList);

		return "NeoCMS/cop/sns/snsList";

	}

}
